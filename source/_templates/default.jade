doctype html
html(lang='en')

  block settings

  head
    meta(charset='utf-8')
    meta(name='viewport', content='initial-scale=1')
    title= title
    meta(name='description', content=description)

    - var sizes = [ 57, 60, 72, 76, 114, 120, 144, 152, 180 ]
    each size in sizes
      link(rel='apple-touch-icon', href='/img/apple-touch-icon-' + size + 'x' + size + '.png', sizes=size + 'x' + size)

    - sizes = [ 16, 32 ]
    each size in sizes
      link(rel='icon', type='image/png', href='/img/favicon-' + size + 'x' + size + '.png', sizes=size + 'x' + size)

    link(rel='icon', type='image/png', href='/img/android-chrome-192x192.png', sizes='192x192')
    link(rel='manifest', href='/manifest.json')
    link(rel='mask-icon', href='/img/safari-pinned-tab.svg', color=themeColor)
    meta(name='msapplication-TileColor', content=themeColor)
    meta(name='msapplication-TileImage', content='/img/mstile-144x144.png')
    meta(name='theme-color', content=themeColor)

    block meta

    style
      block stylus
        include:stylus(compress=true) ../stylus/_index.styl

  body(class=bodyClass || null, id='top')
    mixin button
      a.button&attributes(attributes)
        span.button__text
          block

    block header
      mixin link(text)
        a.header__link(data-wipe=text)&attributes(attributes)= text

      .header(data-scroll-offset)
        .container
          .grid.grid--gutterless.grid--valign-middle
            .grid__item.logo__grid--fixed
              a.logo.brand-gradient(href='/', title='Home')
                .logo__container
                  include /img/logo.svg
                  .is-vhidden Avalanche UK
            .grid__item.logo__grid--flexible
              +link('Join us')(href='/#join-us', data-scroll)
              +link('Merchandise')(href='http://avaclancheuk.spreadshirt.co.uk/')
      .header.header--faux

    block content

    block footer
      .footer
        .container
          .grid.grid--gutterless
            .grid__item.fablet-one-half.desktop-one-quarter
              a.footer__logo.logo.logo--tag(href='/#top', title='Back to top', data-scroll)
                .logo__container
                  include /img/logo__tag.svg
                  .is-vhidden Avalanche UK
            .grid__item.fablet-one-half.desktop-one-quarter
              .footer__content
                h2.footer__heading Follow us
                a.footer__link(href='https://www.twitch.tv/avaclancheuk') Twitch
                a.footer__link(href='https://www.youtube.com/avaclancheuk') YouTube
                a.footer__link(href='https://twitter.com/avaclancheuk') Twitter
                a.footer__link(href='https://www.facebook.com/avaclancheuk') Facebook
                a.footer__link(href='https://plus.google.com/+avaclancheuk') Google+
            .grid__item.desktop-one-half
              .footer__content
                .footer__heading.footer__heading--alt &nbsp;
                - var date = new Date()
                p &copy; #{date.getFullYear()} Avalanche UK

    block scripts
      script
        include ../js/_output.js
